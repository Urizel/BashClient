<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:paddingTop="@dimen/drawer_padding_top"
    android:background="@drawable/header_bg"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/drawer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawer_text"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/drawer_margin_large"
        android:layout_marginBottom="@dimen/drawer_margin_large"
        android:textSize="@dimen/drawer_text_size"
        android:textStyle="bold"
        android:textColor="@color/white"/>

</RelativeLayout>